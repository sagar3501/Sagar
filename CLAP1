#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int sec;
    int D,H,M,S;
    scanf("%d",&sec);
    D=sec/(60*60*24);
    sec=sec%(60*60*24);
    H=sec/(60*60);
    sec=sec%(60*60);
    M=sec/60;
    sec=sec%60;
    S=sec;
    printf("The Duration is %d days %d hours %d minutes %d seconds",D,H,M,S);  
    return 0;
}
